{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "./plugin/opencode-anthropic-auth-proxy.mjs",
    "@mohak34/opencode-notifier@latest",
    "@tarquinen/opencode-dcp@latest"
  ],
  "theme": "opencode",
  "username": "<!--!>",
  "model": "google/gemini-3-flash-short",
  "small_model": "google/gemini-3-flash-short",
  "autoupdate": false,
  "instructions": ["AGENTS.md", "openspec/AGENTS.md"],
  "compaction": {
    "auto": true,
    "prune": true
  },
  "permission": {
    "edit": "ask",
    "bash": {
      "git *": "ask",
      "rm *": "ask",
      "*": "allow"
    }
  },
  "default_agent": "architect",
  "agent": {
    "compaction": {
      "model": "google/gemini-3-flash-short",
      "variant": "medium",
    },
    "plan": {
      "disable": false
    },
    "build": {
      "disable": false
    },
    "explore": {
      "model": "other/glm-4.7",
      "permission": {
        "edit": "deny",
        "write": "deny",
        "bash": "allow"
      }
    }
  },
  "formatter": {
    "rust-formatter": {
      "command": ["rustfmt", "+nightly", "$FILE"],
      "extensions": [".rs"]
    }
  },
  "watcher": {
    "ignore": [
      "node_modules",
      "bun.lock",
      "tmp",
      "**/.git",
      "**/.cache",
      "**/dist",
      "**/build",
      "**/.next",
      "**/__pycache__",
      "**/.venv",
      "**/target",
      "**/.gradle"
    ]
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "tavily-remote": {
      "type": "remote",
      "url": "https://api.laolilin.com/proxy/tavily/mcp",
      "enabled": true,
      "oauth": false,
      "headers": {
        "Authorization": "Bearer {env:TAVILY_TOKEN}",
        "Accept": "application/json, text/event-stream"
      }
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true
    }
  },
  "provider": {
    "anthropic": {
      "name": "anyrouter",
      "npm": "@ai-sdk/anthropic",
      "options": {
        "baseURL": "{env:AI_BASE_URL}/v1"
      },
      "models": {
        "MiniMax-M2.1": {
          "name": "MiniMax-M2.1",
          "id": "MiniMax-M2.1",
          "attachment": false,
          "reasoning": true,
          "tool_call": true,
          "interleaved": {
            "field": "reasoning_details"
          },
          "cost": {
            "input": 0.3,
            "output": 1.2
          },
          "limit": {
            "context": 204800,
            "output": 131072
          },
          "options": {}
        }
      }
    },
    "google": {
      "name": "Google",
      "id": "google",
      "npm": "@ai-sdk/google",
      "options": {
        "baseURL": "{env:AI_BASE_URL}/v1beta",
        "apiKey": "{env:AI_BASE_TOKEN}"
      },
      "models": {
        "gemini-3-flash-short": {
          "id": "gemini-3-flash-preview-short",
          "name": "Gemini 3 Flash Short",
          "release_date": "2025-11-18",
          "reasoning": true,
          "tool_call": true,
          "limit": {
            "context": 250000,
            "output": 64000
          },
          "cost": {
            "input": 0.5,
            "output": 3,
            "cache_read": 0.05
          },
          "options": {
            "thinkingConfig": {
              "includeThoughts": true
            }
          },
          "modalities": {
            "input": ["text", "image", "video", "audio", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "minimal": {
              "thinkingConfig": {
                "thinkingLevel": "minimal"
              }
            },
            "low": {
              "thinkingConfig": {
                "thinkingLevel": "low"
              }
            },
            "medium": {
              "thinkingConfig": {
                "thinkingLevel": "medium"
              }
            },
            "high": {
              "thinkingConfig": {
                "thinkingLevel": "high"
              }
            }
          }
        },
        "gemini-flash-lite": {
          "id": "gemini-flash-lite-latest",
          "name": "Gemini Flash Lite Latest",
          "release_date": "2025-06-17",
          "reasoning": true,
          "limit": {
            "context": 1048576,
            "output": 65536
          },
          "options": {
            "includeThoughts": true
          },
          "cost": {
            "input": 0.1,
            "output": 0.4,
            "cache_read": 0.025
          },
          "modalities": {
            "input": ["text", "image", "audio", "video", "pdf"],
            "output": ["text"]
          }
        }
      }
    },
    "other": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Others",
      "options": {
        "baseURL": "{env:AI_BASE_URL}/v1",
        "apiKey": "{env:AI_BASE_TOKEN}"
      },
      "models": {
        "glm-4.7": {
          "id": "ZhipuAI/GLM-4.7",
          // "id": "z-ai/glm4.7",
          "name": "glm-4.7",
          "reasoning": true,
          "tool_call": true,
          "interleaved": {
            "field": "reasoning_content"
          },
          "limit": {
            "context": 200000,
            "output": 128000
          },
          "options": {
            "thinking": {
              "type": "enabled"
            }
          },
          "variants": {
            "none": {
              "thinking": {
                "type": "disabled"
              }
            },
            "low": {
              "thinking": {
                "type": "enabled",
                "budgetTokens": 8000
              }
            },
            "medium": {
              "thinking": {
                "type": "enabled",
                "budgetTokens": 24000
              }
            },
            "high": {
              "thinking": {
                "type": "enabled",
                "budgetTokens": 48000
              }
            },
            "max": {
              "thinking": {
                "type": "enabled",
                "budgetTokens": 64000
              }
            }
          }
        },
        "Qwen3-Coder": {
          "id": "Qwen/Qwen3-Coder-480B-A35B-Instruct",
          "name": "qwen3-coder",
          "reasoning": true,
          "tool_call": true,
          "interleaved": {
            "field": "reasoning_content"
          }
        },
        "DeepSeek-V3.2-thinking": {
          "id": "deepseek-ai/DeepSeek-V3.2-thinking",
          "name": "deepseek-think",
          "reasoning": true,
          "tool_call": true,
          "interleaved": {
            "field": "reasoning_content"
          },
          "options": {
            "thinking": {
              "type": "enabled"
            }
          },
          "variants": {
            "none": {
              "thinking": {
                "type": "disabled"
              }
            },
            "low": {
              "thinking": {
                "type": "enabled",
                "budgetTokens": 8000
              }
            },
            "medium": {
              "thinking": {
                "type": "enabled",
                "budgetTokens": 24000
              }
            },
            "high": {
              "thinking": {
                "type": "enabled",
                "budgetTokens": 48000
              }
            },
            "max": {
              "thinking": {
                "type": "enabled",
                "budgetTokens": 64000
              }
            }
          }
        }
      }
    }
  }
}

# https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.lua]
indent_size = 2

[*.{ps1,psm1,psd1}]
indent_size = 4
end_of_line = crlf

[*.{sh,bash,zsh}]
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.{toml,json}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

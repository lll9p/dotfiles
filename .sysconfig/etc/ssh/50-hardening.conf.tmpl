# SSH Hardening Configuration
# This file should be placed in /etc/ssh/sshd_config.d/
# DO NOT edit this file directly - edit the template in the dotfiles repo instead

KbdInteractiveAuthentication no
UsePAM yes
PrintMotd yes
Port {{ .sshPort }}
PasswordAuthentication no
PermitRootLogin no
PermitUserEnvironment yes
AcceptEnv FROM
